{
  "name": "mcp-garendesign",
  "version": "1.0.0",
  "description": "GarenCode MCP Design Service - AI-Powered Component Design Tool",
  "main": "dist/src/mcp-server.js",
  "type": "module",
  "scripts": {
    "dev": "tsx src/mcp-server.ts",
    "mcp:dev": "tsx src/mcp-server.ts",
    "build": "tsc --project tsconfig.json && tsc-alias",
    "clean": "rm -rf dist/",
    "rebuild": "npm run clean && npm run build",
    "start": "tsx src/mcp-server.ts",
    "start:prod": "node dist/src/mcp-server.js",
    "validate": "node scripts/validate-config.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "type-check": "tsc --noEmit",
    "check-all": "npm run lint && npm run format:check && npm run type-check",
    "prepare": "husky"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "ai",
    "component-design",
    "frontend",
    "vue",
    "typescript"
  ],
  "author": "GarenCode Team",
  "license": "MIT",
  "dependencies": {
    "@ai-sdk/anthropic": "^1.1.17",
    "@ai-sdk/deepseek": "^0.2.1",
    "@ai-sdk/openai": "^1.0.8",
    "@modelcontextprotocol/sdk": "^1.0.3",
    "ai": "^4.0.18",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-config-typescript": "^3.0.0",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "prettier": "^3.0.0",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,json,md}": [
      "prettier --write"
    ]
  }
}
